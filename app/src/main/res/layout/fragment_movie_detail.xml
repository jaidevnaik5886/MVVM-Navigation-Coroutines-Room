<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ImageView
        android:id="@+id/iv_movie_image"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txt_movie_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="DON 3"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/primaryText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_movie_image" />

    <Button
        android:id="@+id/btn_watch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Watch Trailer"
        app:layout_constraintEnd_toEndOf="@+id/txt_movie_title"
        app:layout_constraintStart_toStartOf="@+id/txt_movie_title"
        app:layout_constraintTop_toBottomOf="@+id/txt_movie_title" />

    <TextView
        android:id="@+id/txt_genre_head"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Genre"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/primaryText"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_watch"
        app:layout_constraintStart_toStartOf="@+id/btn_watch"
        app:layout_constraintTop_toBottomOf="@+id/txt_rating_movie" />

    <TextView
        android:id="@+id/txt_genre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Action"
        android:textSize="14sp"
        android:textColor="@color/secondaryText"
        app:layout_constraintEnd_toEndOf="@+id/txt_genre_head"
        app:layout_constraintStart_toStartOf="@+id/txt_genre_head"
        app:layout_constraintTop_toBottomOf="@+id/txt_genre_head" />

    <TextView
        android:id="@+id/txt_date_head"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Date"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/primaryText"
        app:layout_constraintEnd_toEndOf="@+id/txt_genre"
        app:layout_constraintStart_toStartOf="@+id/txt_genre"
        app:layout_constraintTop_toBottomOf="@+id/txt_genre" />

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="30 Jan 2222"
        android:textSize="14sp"
        android:textColor="@color/secondaryText"
        app:layout_constraintEnd_toEndOf="@+id/txt_date_head"
        app:layout_constraintStart_toStartOf="@+id/txt_date_head"
        app:layout_constraintTop_toBottomOf="@+id/txt_date_head" />

    <TextView
        android:id="@+id/txt_overview_head"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Overview"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/primaryText"
        app:layout_constraintEnd_toEndOf="@+id/txt_date"
        app:layout_constraintStart_toStartOf="@+id/txt_date"
        app:layout_constraintTop_toBottomOf="@+id/txt_date" />

    <TextView
        android:id="@+id/txt_rating_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Popularity : 3545"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/orange"
        app:layout_constraintEnd_toEndOf="@+id/btn_watch"
        app:layout_constraintStart_toStartOf="@+id/btn_watch"
        app:layout_constraintTop_toBottomOf="@+id/btn_watch" />

    <TextView
        android:id="@+id/txt_overview_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/secondaryText"
        android:ellipsize="end"
        android:maxLines="5"
        android:text="TextView TextView TextView TextViewvTextViewTextViewTextViewTextViewTextTextView TextView TextViewvTextViewTextViewTextViewTextViewTextTextView TextView TextViewvTextViewTextViewTextViewTextViewTextTextView TextView TextViewvTextViewTextViewTextViewTextViewTextwTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextView"
        app:layout_constraintEnd_toEndOf="@+id/txt_overview_head"
        app:layout_constraintStart_toStartOf="@+id/txt_overview_head"
        app:layout_constraintTop_toBottomOf="@+id/txt_overview_head" />
</androidx.constraintlayout.widget.ConstraintLayout>


