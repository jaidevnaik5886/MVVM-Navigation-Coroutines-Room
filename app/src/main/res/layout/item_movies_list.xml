<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_movie_img"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txt_movie_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Don 3"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/primaryText"
        app:layout_constraintBottom_toBottomOf="@+id/iv_movie_img"
        app:layout_constraintStart_toEndOf="@+id/iv_movie_img"
        app:layout_constraintTop_toTopOf="@+id/iv_movie_img"
        app:layout_constraintVertical_bias="0.155" />

    <TextView
        android:id="@+id/txt_movie_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="20 Jan 2022"
        android:textSize="14sp"
        android:textStyle="normal"
        android:textColor="@color/secondaryText"
        app:layout_constraintStart_toStartOf="@+id/txt_movie_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_movie_name" />

    <TextView
        android:id="@+id/txt_movie_certificate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="U/A"
        android:textSize="14sp"
        android:textStyle="normal"
        android:textColor="@color/secondaryText"
        app:layout_constraintBottom_toBottomOf="@+id/iv_movie_img"
        app:layout_constraintStart_toStartOf="@+id/txt_movie_date"
        app:layout_constraintTop_toBottomOf="@+id/txt_movie_date" />

    <Button
        android:id="@+id/btn_movie_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Book"
        app:layout_constraintBottom_toBottomOf="@+id/iv_movie_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_movie_img" />
</androidx.constraintlayout.widget.ConstraintLayout>